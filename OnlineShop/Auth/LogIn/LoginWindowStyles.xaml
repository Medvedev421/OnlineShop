<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Стиль для текстового поля ввода -->
    <Style x:Key="StyleTextBox" TargetType="TextBox">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="400"/> 
        <Setter Property="Margin" Value="0,20,10,0"/> <!-- Отступ для выравнивания -->
    </Style>

    <!-- Стиль для поля пароля -->
    <Style x:Key="StylePasswordBox" TargetType="PasswordBox">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="400"/> 
        <Setter Property="Margin" Value="0,20,10,0"/> <!-- Отступ для выравнивания -->
    </Style>

    <!-- Стиль для кнопки входа -->
    <Style x:Key="StyleButtonLogin" TargetType="Button">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="100"/>
    </Style>
    
    <!-- Стиль для кнопки регистрации -->
    <Style x:Key="StyleButtonRegister" TargetType="Button">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
    </Style>

    <!-- Стиль для кнопки подтверждения регистрации -->
    <Style x:Key="StyleButtonRegisterConfirm" TargetType="Button">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
    </Style>
</ResourceDictionary>